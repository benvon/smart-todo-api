{
  "name": "smart-todo-web",
  "version": "1.0.0",
  "description": "Smart Todo frontend reference implementation",
  "type": "module",
  "scripts": {
    "build": "node esbuild.config.js",
    "dev": "node esbuild.config.js --watch",
    "test": "node --test js/**/*.test.js",
    "test:coverage": "c8 --reporter=text --reporter=html npm test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security:audit": "npm audit",
    "security:check": "npx check-audit --audit-level=moderate && (npm outdated || true)",
    "build:check": "npm run build"
  },
  "dependencies": {
    "@actions/http-client": "^4.0.0",
    "chrono-node": "^2.7.8",
    "dayjs": "^1.11.13"
  },
  "overrides": {
    "@isaacs/brace-expansion": "5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^12.0.3",
    "@semantic-release/npm": "^13.1.4",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "c8": "^10.1.3",
    "esbuild": "^0.27.2",
    "eslint": "^9.35.0",
    "npm-audit-resolver": "^3.0.0-RC.0",
    "semantic-release": "^25.0.3"
  }
}
